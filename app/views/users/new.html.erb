<h1>New User</h1>
<%= form_with url: "/users", method: :post do |form| %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>
  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  <h5 style="color: red">
    <%= alert %>
  </h5>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
